      "cartUrl": "https://cellphones.com.vn/cart/",
      "shippingMethod": "#payment-info-method-shipping",
      "districtDropdown": "[placeholder='Chọn quận/huyện']",
      "wardDropdown": "[placeholder='Chọn phường/xã']",
      "streetInput": "[placeholder='Số nhà, tên đường (Vui lòng chọn quận/huyện và phường/xã trước)']",
      "codPayment": ".list-payment__item-cod",
      "finalSubmit": ".block-info .btn"
